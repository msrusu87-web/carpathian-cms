        "card_shadow": "rgba(0, 0, 0, 0.1)",
        "overlay": "rgba(30, 64, 175, 0.95)",
        "nav_bg": "#ffffff",
        "nav_text": "#111827",
        "nav_hover": "#ff6b35",
        "footer_bg": "#1f2937",
        "footer_text": "#d1d5db"
    },
    "typography": {
        "font_family_primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "font_family_secondary": "'Poppins', sans-serif",
        "font_family_headings": "'Poppins', sans-serif",
        "font_family_mono": "'Fira Code', 'Consolas', monospace",
        "font_size_base": "16px",
        "font_size_sm": "14px",
        "font_size_lg": "18px",
        "font_size_xl": "20px",
        "font_size_2xl": "24px",
        "font_size_3xl": "30px",
        "font_size_4xl": "36px",
        "font_size_5xl": "48px",
        "font_size_6xl": "60px",
        "font_weight_light": "300",
        "font_weight_normal": "400",
        "font_weight_medium": "500",
        "font_weight_semibold": "600",
        "font_weight_bold": "700",
        "font_weight_extrabold": "800",
        "line_height_tight": "1.25",
        "line_height_normal": "1.5",
        "line_height_relaxed": "1.75",
        "letter_spacing_tight": "-0.025em",
        "letter_spacing_normal": "0",
        "letter_spacing_wide": "0.025em"
    },
    "spacing": {
        "section_padding": "80px",
        "container_padding": "20px",
        "card_padding": "30px",
        "button_padding_x": "32px",
        "button_padding_y": "14px",
        "input_padding_x": "16px",
        "input_padding_y": "12px"
    },
    "borders": {
        "radius_sm": "6px",
        "radius_md": "10px",
        "radius_lg": "16px",
        "radius_xl": "24px",
        "radius_full": "9999px",
        "width": "1px",
        "width_focus": "2px"
    },
    "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
        "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
        "button": "0 4px 14px 0 rgba(255, 107, 53, 0.39)",
        "button_hover": "0 6px 20px rgba(255, 107, 53, 0.5)",
        "card": "0 10px 30px rgba(0, 0, 0, 0.08)",
        "card_hover": "0 15px 40px rgba(0, 0, 0, 0.12)"
    },
    "animations": {
        "transition_fast": "150ms",
        "transition_base": "300ms",
        "transition_slow": "500ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easing_in": "cubic-bezier(0.4, 0, 1, 1)",
        "easing_out": "cubic-bezier(0, 0, 0.2, 1)",
        "easing_bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "config": {
        "layout": "full-width",
        "header_style": "modern",
        "header_sticky": true,
        "header_transparent": false,
        "sidebar_enabled": false,
        "sidebar_position": "right",
        "footer_style": "corporate",
        "widget_support": true,
        "responsive_breakpoints": {
            "mobile": "640px",
            "tablet": "768px",
            "laptop": "1024px",
            "desktop": "1280px",
            "wide": "1536px"
        },
        "features": {
            "gradient_buttons": true,
            "rounded_corners": true,
            "hover_effects": true,
            "smooth_scrolling": true,
            "loading_animations": true,
            "parallax": true,
            "glassmorphism": true,
            "dark_mode": false
        }
    }
