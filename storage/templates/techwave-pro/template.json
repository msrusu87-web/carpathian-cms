        "info": "#3b82f6",
        "dark": "#1f2937",
        "light": "#f9fafb",
        "gradient_start": "#ff6b35",
        "gradient_end": "#1e40af",
        "button_primary": "#ff6b35",
        "button_primary_hover": "#ff5722",
        "button_secondary": "#1e40af",
        "button_secondary_hover": "#1e3a8a",
        "button_accent": "#fbbf24",
        "button_accent_hover": "#f59e0b",
        "border": "#e5e7eb",
        "border_focus": "#ff6b35",
