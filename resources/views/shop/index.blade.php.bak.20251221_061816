                            @if(request('category'))
                                @php
                                    $currentCat = $categories->firstWhere('slug', request('category'));
                                @endphp
                                {{ $currentCat ? $currentCat->getTranslation('name', app()->getLocale()) : 'Shop' }}
                            @else
                                Servicii Web Design
                            @endif
